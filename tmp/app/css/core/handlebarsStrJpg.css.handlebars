{{#sprites}}

.iconSpriteJpg(){
	background-image: url({{{escaped_image}}});
}
.icon-{{name}}(@isHover: false){

	.hover (@a) when (@a = false) {
		.iconSpriteJpg();
		width: {{px.width}};
		height: {{px.height}};
	}
	.hover(@isHover);
	
	background-position: {{px.offset_x}} {{px.offset_y}};
}

[class^="icon-"],
[class*=" icon-"]{
	.iconSpriteJpg();
}
.icon-{{name}}{
	background-position: {{px.offset_x}} {{px.offset_y}};
	width: {{px.width}};
	height: {{px.height}};
}

{{/sprites}}