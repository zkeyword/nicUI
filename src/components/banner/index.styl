.banner
    height: 154px;
    width: 100%;
    margin: 0 auto;
    position: relative;
    overflow: hidden;

    .leftPre, .rightNext 
        background-image: url(../../app/img/icon-btn.png);
        position: absolute;
        height: 30px;
        width: 20px;
        top: 70px;
        z-index: 9;

    .leftPre 
        left: 10px;
        background-position: -3px -2px;
        &:hover
            background-position: -3px -62px;
        
    .rightNext 
        right: 10px
        background-position: -3px -32px;
        &:hover
            background-position: -3px -92px;

    .bigPic 
        height: 154px;
        position: absolute;
        z-index: 1;
        li 
            width: 355px;
            height: 154px;
            float: left

    .btn 
        position: absolute;
        left: 50%;
        bottom: 7px;
        margin-left: -42px;
        z-index: 10

        li 
            height: 8px;
            width: 8px;
            background: #fff;
            overflow: hidden;
            margin-left: 7px;
            text-indent: 22px;
            float: left;
            border-radius: 50%;

            &:hover
                background-color: #ececec;

            &.cur 
                background: #ca1622;